! Fonts {{{
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle:  hintmedium
Xft.dpi:        90
Xft.lcdfilter:  lcddefault
! }}}

! Cursor
Xcursor.theme:                          Capitaine
Xcursor.size:                           16

! Rofi
rofi.color-enabled:                     true
rofi.color-window:                      #002b37, #002b37, #003642
rofi.color-normal:                      #002b37, #819396, #003643, #008ed4, #ffffff
rofi.color-active:                      #002b37, #008ed4, #003643, #008ed4, #66c6ff
rofi.color-urgent:                      #002b37, #da4281, #003643, #008ed4, #890661
rofi.opacity:                           50
rofi.lines:                             25
rofi.width:                             30
!rofi.font:                              pango:Open Sans 20
rofi.font:				9x15
rofi.padding:                           10
rofi.line-margin:                       7

! URxvt
URxvt*background:                       #0C0C0C
URxvt*foreground:                       #E6E6E6

!blue
*color4:  #46aede
*color12: #46aede

URxvt*scrollBar:                        false
URxvt*font:				xft:Inconsolata For Powerline:size=12
!URxvt*font:				xft:Bitstream Vera Sans Mono:pixelsize=15
!URxvt*font:                             xft:Iosevka Nerd Font:size=10,Iosevka Term:size=10,
!URxvt*font:                             xft:Iosevka Term:size=10,\
!                                       xft:DejaVu Sans Mono For Powerline Nerd Font:size=10:antialias=true:hinting=true,\
!                                        xft:SauceCodePro Nerd Font:size=10:antialias=true:hinting=true
!URxvt*font:                           xft:Anonymous Pro for Powerline:regular:size=13
URxvt*letterSpace: 1
!URxvt*font:				xft:Terminus:medium:size=10
URxvt*title:                            Terminal
URxvt*perl-ext-common:                  default,matcher,clipboard
URxvt*matcher.button:                   2
URxvt*url-launcher:                     /usr/bin/xdg-open

URxvt.iso14755:                         False
URxvt.keysym.C-S-V:                     perl:clipboard:paste
!URxvt.keysym.C-Up:                      font-size:increase
!URxvt.keysym.C-Down:                    font-size:decrease
!URxvt.keysym.C-S-Up:                    font-size:incglobal
!URxvt.keysym.C-S-Down:                  font-size:decglobal

! Scrensaver
xscreensaver.logFile:/var/log/xscreensaver.log
xscreensaver.verbose:true

! scroll back to the bwottom on keypass
URxvt*scrollTtyKeyPass: true

